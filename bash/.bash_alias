# bash
_BASH_ALIAS_=":"
# color option
if [ -x /usr/bin/dircolors ]; then
	test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
	alias ls='ls --color=auto -F'
	alias dir='dir --color=auto'
	alias vdir='vdir --color=auto'

	alias grep='grep --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
fi

# default command
# alias ls="ls -F"
alias la="ls -a"
alias ll="ls -lh"
alias lla="ls -alh"
alias rm="rm -i"
alias mv="mv -i"
alias cp="cp -i"
alias less='less -gMj2';

# for typo
alias l='ls'
alias s='ls'
alias sl='ls'
# alias tsk='task'
# alias taks='task'

#shellscript

# cd
[ -d ${HOME}/Downloads ] && alias dow='cd ${HOME}/Downloads/'
[ -d ${HOME}/Documents ] && alias doc='cd ${HOME}/Documents/'
[ -d ${HOME}/Desktop ] && alias desk='cd ${HOME}/Desktop/'
[ -d ${HOME}/tmp ] && alias tmp='cd ${HOME}/tmp'



## database

if [ -d /Applications ]; then
	alias app="cd /Applications/"
	alias ls="ls -GF"
	alias preview="open -a Preview"
fi
if [ `type -t apt-get` ]; then
	# Add an "alert" alias for long running commands.  Use like so:
	#   sleep 10; alert
	alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e "\""s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//"\"")"'
	# custom command
	alias aptcheck="sudo apt-get update && sudo apt-get upgrade"
	alias aptclean="sudo apt-get autoremove && sudo apt-get autoclean"
	alias aptsearch="apt-cache search"
fi
